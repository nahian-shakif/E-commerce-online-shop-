				<script>
						$(document).ready(function(){

							ShowAll();
						function ShowAll(){
							$.ajax({
								type: 'ajax',
								url: '<?php echo base_url() ?>home/getAll',
								async: false,
								dataType: 'json',
								success: function(data){
									var html = '';
									var i;
									for(i=0; i<data.length; i++){
										html +='<div class="col-sm-2 col-md-2 col-lg-2"><div class="product-image-wrapper"><div class="single-products"><div class="productinfo text-center"><a href="javascript:;" class="showPic item" data="'+data[i].product_id+'"><img src="<?php echo base_url(); ?>'+data[i].image+'"  /></a><h2>'+data[i].product_name+'</h2><p class="productSale"><i class="fa fa-plus-square" aria-hidden="true"></i> Buy 2 Save $1.50</p><p class="text-lead">'+data[i].price+'</p><button  class="btn  btn-default add-to-cart my-cart-btn cartbtn" id="cart" data-id="'+data[i].product_id+'" data-name="'+data[i].product_name+'" data-summary="summary 2" data-price="'+data[i].price+'" data-quantity="1" data-image="'+data[i].image+'">Add to Cart</button></div></div> </div></div>';
									}			
											
									$('.row_9').html(html);
								},
								error: function(){
									alert('Could not get Data from Database');
								}
							});
						}
						

						});
					
					</script>
					
